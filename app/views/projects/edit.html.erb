    <div class="container">

      <%= form_for @project, url: {action: :update} do |f| %>

        <h3>Add a Project</h3>
        <%= "<div>#{@project.errors.full_messages.first}</div>".html_safe if @project.errors.any? %>
          <p>

          <div>
                  <label>Project title</label>
                  <%= f.text_field :title, class: "form-control"%>
          </div>

          <div>
                  <label>Description</label>
                  <%= f.text_field :description, class: "form-control" %>
          </div>

            </p>
        <div>
            <%= link_to 'Back', { controller: 'projects', action: 'index'} ,class: "btn btn-success"%>
            <%= f.submit 'Update Product' %>
          </div>
      <% end %>
    </div>
