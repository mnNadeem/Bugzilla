<div class="container">
  <%= form_for @project, validate: true, url: {action: :create} do |f| %>
    <div>
      <h3>Add a Project</h3>
    </div>
    <div>
      <p>
        <%# <%= "<div>#{@project.errors.full_messages.first}</div>".html_safe if @project.errors.any? %> 
      <div>
          <label>Project Title</label>
            <%= f.text_field :title, class: "form-control" %>
      </div>
      <div>
          <label>Description</label>
            <%= f.text_field :description, class: "form-control" %>
      </div>
        </p>
    </div>
    <div>
      <%= link_to 'Back', { controller: 'projects', action: 'index'} ,class: "btn btn-success"%>
      <%= f.submit 'Create Project' %>
    </div>
  <% end %>
</div>
