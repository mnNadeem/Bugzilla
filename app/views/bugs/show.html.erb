<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div>
        <h6><label>Bug Title:</label></h6>
        <%= @bug.title %>
        <br>
        <br>
      </div>
      <div>
        <h6><label>Screenshot:</label></h6>
        <% if @bug.screenshot.attached? %>
          <%= image_tag @bug.screenshot %>
        <%end%>
        <br>
        <br>
      </div>
      <div>
        <%= link_to 'Back', { controller: 'projects', action: 'index'} ,class: "btn btn-success"%>
      </div>
    </div>
  </div>
</div>
